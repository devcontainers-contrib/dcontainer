{
    "id": "apko",
    "version": "1.0.1",
    "name": "apko (via Github Releases)",
    "documentationURL": "http://github.com/devcontainers-contrib/features/tree/main/src/apko",
    "description": "apko is an apk-based OCI image builder",
    "options": {
        "version": {
            "default": "latest",
            "description": "Select the version to install.",
            "proposals": [
                "latest"
            ],
            "type": "string"
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers-contrib/features/gh-release"
    ],
    "dependencies": [
        {
            "feature": "ghcr.io/devcontainers-contrib/features/gh-release:1.0.11",
            "options": {
                "repo": "chainguard-dev/apko",
                "binaryNames": "apko",
                "version": "$options.version"
            }
        }
    ],
    "install_command": "echo 'Done!'",
    "test_scenarios": [
        {
            "name": "test_defaults_debian",
            "image": "mcr.microsoft.com/devcontainers/base:debian",
            "test_commands": [
                "apko version"
            ],
            "options": {}
        }
    ]
}