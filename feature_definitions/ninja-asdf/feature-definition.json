{
    "id": "ninja-asdf",
    "version": "2.0.13",
    "name": "Ninja (via asdf)",
    "documentationURL": "http://github.com/devcontainers-contrib/features/tree/main/src/ninja-asdf",
    "description": "Ninja is a small build system with a focus on speed.",
    "options": {
        "version": {
            "default": "latest",
            "description": "Select the version to install.",
            "proposals": [
                "latest"
            ],
            "type": "string"
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers-contrib/features/asdf-package"
    ],
    "dependencies": [
        {
            "feature": "ghcr.io/devcontainers-contrib/features/asdf-package:1.0.5",
            "options": {
                "plugin": "ninja",
                "version": "$options.version"
            }
        }
    ],
    "install_command": "echo 'Done!'",
    "test_scenarios": [
        {
            "name": "test",
            "image": "mcr.microsoft.com/devcontainers/base:debian",
            "test_commands": [
                "ninja --version"
            ],
            "options": {}
        }
    ]
}