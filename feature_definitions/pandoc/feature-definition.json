{
    "id": "pandoc",
    "version": "1.0.2",
    "name": "Pandoc (via Github Releases)",
    "documentationURL": "http://github.com/devcontainers-contrib/features/tree/main/src/pandoc",
    "description": "Pandoc is a Haskell library for converting from one markup format to another, and a command-line tool that uses this library.",
    "options": {
        "version": {
            "default": "latest",
            "description": "Select the version to install.",
            "proposals": [
                "latest"
            ],
            "type": "string"
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers-contrib/features/gh-release"
    ],
    "dependencies": [
        {
            "feature": "ghcr.io/devcontainers-contrib/features/gh-release:1.0.8",
            "options": {
                "repo": "jgm/pandoc",
                "binaryName": "pandoc",
                "version": "$options.version"
            }
        }
    ],
    "install_command": "echo 'Done!'",
    "test_scenarios": [
        {
            "name": "test_defaults_debian",
            "image": "mcr.microsoft.com/devcontainers/base:debian",
            "test_commands": [
                "pandoc --version"
            ],
            "options": {}
        }
    ]
}